# "process this  to reload all stream protocols"
record (sub, "Testaad:reload")
{
    field (SNAM, "streamReload")
}

# some scaling -10...10V <-> 0x0000...0xffff and back
record (ao, "Testaad:ao")
{
    field (DESC, "An analog value")
    field (DTYP, "stream")
    field (OUT,  "@example.proto set-ao terminal")
    field (PREC, "3")
    field (LINR, "LINEAR")
    field (ESLO, "0.000305180437934") # 20.0 / 0xffff 
    field (EOFF, "-10")
    field (DRVL, "-10")
    field (DRVH, "10")
    field (EGU,  "V")
}

record (ai, "Testaad:ai")
{
    field (DESC, "An analog value")
    field (DTYP, "stream")
    field (INP,  "@example.proto ai terminal")
    field (PREC, "3")
    field (LINR, "LINEAR")
    field (ESLO, "0.000305180437934") # 20.0 / 0xffff 
    field (EOFF, "-10")
    field (EGU,  "V")
}

# simple integer and binary i/o
record (longout, "Testaad:lo")
{
    field (DESC, "An integer value")
    field (DTYP, "stream")
    field (OUT,  "@example.proto lo terminal")
}

record (longin, "Testaad:li")
{
    field (DESC, "An integer value")
    field (DTYP, "stream")
    field (INP,  "@example.proto li terminal")
}

record (bo, "Testaad:bo")
{
    field (DESC, "A bit value")
    field (DTYP, "stream")
    field (OUT,  "@example.proto bo terminal")
    field (MASK, "42")
    field (ZNAM, "OFF")
    field (ONAM, "ON")
}

record (bi, "Testaad:bi")
{
    field (DESC, "A bit value")
    field (DTYP, "stream")
    field (INP,  "@example.proto bi terminal")
    field (ZNAM, "OFF")
    field (ONAM, "ON")
}

# playing with enums
record (mbbo, "Testaad:mbbo")
{
    field (DESC, "Print Enums")
    field (DTYP, "stream")
    field (OUT,  "@example.proto enums terminal")
    field (ZRST, "A")
    field (ZRVL, "2")
    field (ONST, "B")
    field (ONVL, "3")
    field (TWST, "C")
    field (TWVL, "1")
    field (THST, "D")
    field (THVL, "0")
}

record (stringout, "Testaad:command")
{
    field (DTYP, "stream")
    field (OUT,  "@example.proto COMMAND terminal")
}

record (stringin, "Testaad:info")
{
    field (DTYP, "stream")
    field (INP,  "@example.proto info terminal")
}

# prints all available checksums
record (stringout, "Testaad:checksum")
{
    field (DTYP, "stream")
    field (OUT,  "@example.proto checksum terminal")
}

# this  gets any (terminated) input line
record (stringin, "Testaad:spy")
{
    field (DTYP, "stream")
    field (INP,  "@example.proto spy terminal")
    field (SCAN, "I/O Intr")
    field (FLNK, "Testaad:log5")
}

# these  log the last few input lines
record (stringin, "Testaad:log5")
{
    field (INP,  "Testaad:log4")field (FLNK, "Testaad:log4")
}

record (stringin, "Testaad:log4")
{field (INP,  "Testaad:log3")field (FLNK, "Testaad:log3")}))<record (stringin, "Testaad:laog3")
{
    field (INP,  "Testaad:log2")
    field (FLNK, "Testaad:log2")
}

record (stringin, "Testaad:log2")
{
    field (INP,  "Testaad:log1")
    field (FLNK, "Testaad:log1")
}

record (stringin, "Testaad:log1")
{
    field (INP,  "Testaad:spy")
}

# caput to A,B,C or PROC to process this
record (calcout, "Testaad:calcout")
{
    field (DTYP, "stream")
    field (OUT,  "@example.proto calcout terminal")
    field (A,    "3.1415")
    field (B,    "15")
    field (C,    "8")
    field (CALC, "0") # should be a valid expression
    field (DESC, "filename")
}

# read a long string as a waveform of characteres
record (waveform, "Testaad:hugestring")
{
    field (DTYP, "stream")
    field (INP,  "@example.proto chardfswavedfsin terminal")
    field (FTVL, "CHAR")
    field (NELM, "1000")
}

# write an array of strings
record (waveform, "Testaad:strings")
{
    field (DTYP, "stream")
    field (INP,  "@example.proto stringdfswavedfsout terminal")
    field (FTVL, "STRING")
    field (NELM, "10")
}